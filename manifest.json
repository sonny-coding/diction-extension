{
  "manifest_version": 3,
  "name": "Word Definition Extension",
  "version": "1.0",
  "description": "Shows the definition of a highlighted word",
  "permissions": ["activeTab", "https://api.dictionaryapi.dev/"],
  "browser_action": {
    "default_icon": "icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
